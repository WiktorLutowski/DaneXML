<Window x:Class="DaneXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DaneXML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Button x:Name="saveButton" Click="saveButton_Click"  Content="Zapisz" Width="100" Height="50" Margin="10" FontSize="25" HorizontalAlignment="Center"></Button>
        <Button x:Name="loadButton" Click="loadButton_Click" Grid.Column="1" Width="100" Height="50" Margin="10" FontSize="25" HorizontalAlignment="Center" Content="Wczytaj"></Button>
        <DataGrid x:Name="dataGrid" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"  Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Imię" Binding="{Binding FirstName}" />
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="Zarobki" Binding="{Binding Wages}" />
                <DataGridTextColumn Header="Data zatrudnienia" Binding="{Binding EmploymentDate}"/>
                <DataGridTextColumn Header="Data zwolnienia" Binding="{Binding DismissalDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
